<div class="container my-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center h2">Registrarse</h1>
            <div id="errMsg"></div>

            <form name="formSignUp" id="formSignUp" method="post" action="api/signup">
                <!-- Email input -->
                <div class="form-outline mb-4 mt-4">
                    <input type="text" id="username" name="username" class="form-control" required/>
                    <label class="form-label" for="username">Email</label>
                </div>
                <!-- Contraseña input -->
                <div class="form-outline mb-4 mt-4">
                    <input type="password" id="password" name="password" class="form-control" required/>
                    <label class="form-label" for="password">Contraseña</label>
                </div>
                <!-- Nombre input -->
                <div class="form-outline mb-4 mt-4">
                    <input type="text" id="name" name="name" class="form-control" required/>
                    <label class="form-label" for="name">Nombre</label>
                </div>
                <!-- Dirección input -->
                <div class="form-outline mb-4 mt-4">
                    <input type="text" id="address" name="address" class="form-control" required/>
                    <label class="form-label" for="address">Dirección</label>
                </div>
                <!-- Edad input -->
                <div class="form-outline mb-4 mt-4">
                    <input type="text" id="age" name="age" class="form-control" required/>
                    <label class="form-label" for="age">Edad</label>
                </div>
                <!-- Teléfono input -->
                <div class="form-outline mb-4 mt-4">
                    <input type="text" id="phone" name="phone" class="form-control input-element" required/>
                    <label class="form-label" for="phone">Celular</label>
                </div>
                <!-- Foto de perfil input -->
                <div class="form mb-4 mt-4">
                    <label class="form-check-label" for="avatar">Avatar</label>
                    <input type="file" id="avatar" name="avatar" class="form-control" required/>
                </div>
                <!-- Submit button -->
                <button type="submit" id="btnEnviar" class="btn btn-primary btn-block mb-4">Registrarse</button>
                <a href="/login" class="btn btn-block btn-link text-capitalize">Iniciar sesión</a>
            </form>
        </div>
    </div>
</div>

<script src="/js/cleave.min.js"></script>
<script src="/js/cleave-phone.ar.js"></script>
<script src="/js/signup.js"></script>
