<div class="container my-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center h2"></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h1 class="text-center h2">Ingrese un producto</h1>
            <form name="productForm" id="productForm" method="post">
                <!-- Nombre input -->
                <div class="form-outline mb-4">
                    <input type="text" id="name" name="name" class="form-control" required/>
                    <label class="form-label" for="name">Título</label>
                </div>
                <!-- Descripción input -->
                <div class="form-outline mb-4">
                    <input type="text" id="description" name="description" class="form-control" required/>
                    <label class="form-label" for="description">Descripción</label>
                </div>
                <!-- Código input -->
                <div class="form-outline mb-4">
                    <input type="text" id="code" name="code" class="form-control" required/>
                    <label class="form-label" for="code">Código</label>
                </div>
                <!-- Precio input -->
                <div class="form-outline mb-4">
                    <input type="number" id="price" name="price" class="form-control" required/>
                    <label class="form-label" for="price">Precio</label>
                </div>
                <!-- Stock input -->
                <div class="form-outline mb-4">
                    <input type="number" id="stock" name="stock" class="form-control" required/>
                    <label class="form-label" for="stock">Stock</label>
                </div>
                <!-- Imagen input -->
                <div class="form-outline mb-4">
                    <input type="text" id="image" name="image" class="form-control" required/>
                    <label class="form-label" for="image">Link de miniatura</label>
                </div>
        
                <!-- Submit button -->
                <button type="submit" id="btnEnviar" class="btn btn-primary btn-block mb-4">Agregar Producto</button>
            </form>
        </div>
    </div>
    <div class="col-md-8 offset-md-2">
        <hr>
        <p class="text-center h3">Listado de productos</p>
        <div id="products" class="row">

        </div>
    </div>
</div>
